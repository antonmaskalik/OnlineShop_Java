<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <!-- Console appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %highlight{%-5level}{FATAL=red, ERROR=red, WARN=yellow, INFO=white, DEBUG=blue} %logger{36} - %msg%n"/>
        </Console>

        <!-- RoutingAppender with dynamic routes -->
        <Routing name="RoutingAppender">
            <Routes pattern="${ctx:testName:-default}">
                <Route key="default">
                    <File name="DynamicFile" fileName="logs/${ctx:testName:-default}.log">
                        <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
                    </File>
                </Route>
                <Route>
                    <File name="DynamicFile" fileName="logs/${ctx:testName}.log">
                        <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %-5level %logger{36} - %msg%n"/>
                    </File>
                </Route>
            </Routes>
        </Routing>
    </Appenders>

    <!-- Logger for the entire application -->
    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="RoutingAppender"/>
        </Root>
    </Loggers>
</Configuration>

